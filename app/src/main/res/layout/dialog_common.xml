<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width_default"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/GBK99A"
    tools:layout_gravity="center"
    >

    <Space
        android:layout_width="0dp"
        android:layout_height="16dp"
        />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        tools:src="@mipmap/ic_launcher"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/SingleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/GBK02A"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="A Short Title is Best"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/GBK03A"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="After the security setting is changed, withdrawal will be disabled in the next 24 hours."
        tools:visibility="visible"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="16dp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/divider_horizontal"
        app:showDividers="middle"
        >

        <TextView
            android:id="@+id/tvAction1"
            style="@style/Clickable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height_default"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/GBK03A"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Action1"
            />

        <TextView
            android:id="@+id/tvAction2"
            style="@style/Clickable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height_default"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/GBK03A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Action2"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/tvAction3"
            style="@style/Clickable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height_default"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/GBK03A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Action3"
            tools:visibility="visible"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>