<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@drawable/sheet_bg"
    tools:layout_gravity="bottom">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/RegisterTitleTextView"
        android:text="@string/email_code"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvDesc"
        style="@style/RegisterItem"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/GBK07A"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        />

    <com.topList.android.ui.widget.BaseFexLinePinField
        android:id="@+id/pfCode"
        style="@style/NumberPinLineField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@id/tvDesc"
        app:layout_constraintStart_toStartOf="@id/tvDesc"
        app:layout_constraintTop_toBottomOf="@+id/tvDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38dp"
        app:noOfFields="6"/>



</androidx.constraintlayout.widget.ConstraintLayout>