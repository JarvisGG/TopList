<resources>

    <!-- Base application theme. -->

    <style name="Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ZView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="TopList" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="RecyclerViewItem">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">@color/GBK99</item>

    </style>

    <style name="ViewClick">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="RecyclerViewItemTitle">
        <item name="android:textColor">@color/GBK02</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RecyclerViewLabel">
        <item name="android:clickable">false</item>
    </style>

    <style name="RecyclerViewLabelTitle">
        <item name="android:textColor">@color/GBK02</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.TopList.HomeToolbar" parent="Widget.TopList.Toolbar.SmallCapsTitle">
        <item name="android:background">@null</item>
        <item name="android:elevation">4dp</item>
        <item name="actionMenuTextColor">@color/GBK04A</item>
        <item name="colorControlNormal">@color/GBK04A</item>
        <item name="colorPrimary">@color/GBK04A</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="Widget.TopList.Toolbar.SmallCapsTitle">
        <item name="android:titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>
    </style>

    <style name="Widget.TopList.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/GBL01A</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="TextAppearance.ToolbarTitleSmallCaps" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextAppearance.DialogContent" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <style name="TextAppearance.EmptyText" parent="@style/TextAppearance.DialogContent">
        <item name="android:textColor">@color/GBK02A</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <style name="SingleLine">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <declare-styleable name="TitleEditText">
        <attr name="title" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="contentPadding" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="textWColor" format="color"/>
        <attr name="editHint" format="string"/>
    </declare-styleable>

    <style name="RegisterTitleTextView" parent="android:TextAppearance">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/GBK02A</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="RegisterItem" parent="android:TextAppearance">
        <item name="layout_constraintStart_toStartOf">@id/tvTitle</item>
        <item name="layout_constraintEnd_toEndOf">@id/tvTitle</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListButton" parent="Clickable">
        <item name="android:textSize">@dimen/button_text_default</item>
        <item name="android:textColor">@color/GBK02A</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BlueButton" parent="ListButton">
        <item name="android:background">@drawable/bg_button_blue</item>
    </style>

    <style name="NumberPinLineField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/single_edit_text_default</item>
        <item name="isCursorEnabled">true</item>
        <item name="fieldColor">@color/GBK07A</item>
        <item name="highlightColor">@color/GBK02A</item>
        <item name="cursorColor">@color/GBL01A</item>
        <item name="cursorWidth">2dp</item>
        <item name="distanceInBetween">8dp</item>
        <item name="bottomTextPaddingDp">11dp</item>
        <item name="highlightType">currentField</item>
    </style>

    <style name="ResendButton" parent="Clickable">
        <item name="textStart">@string/send</item>
        <item name="textReset">@string/resend</item>
        <item name="textInCountPrefix">@string/resend_prefix</item>
        <item name="textInCountSuffix">@string/resend_suffix</item>
        <item name="android:background">@null</item>
        <item name="countDownTime">60</item>
        <item name="countDownInterval">1</item>
        <item name="textColorEnable">@color/GBL01A</item>
        <item name="textColorDisable">@color/GBK04A</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>


    <declare-styleable name="BaseFexLinePinField">
        <attr name="bottomTextPaddingDp" format="dimension"/>
        <attr name="cursorColor" format="color"/>
        <attr name="cursorWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CountDownButton">
        <attr name="countDownTime" format="integer"/>
        <attr name="countDownInterval" format="integer"/>
        <attr name="textStart" format="string"/>
        <attr name="textInCountPrefix" format="string"/>
        <attr name="textInCountSuffix" format="string"/>
        <attr name="textReset" format="string"/>
        <attr name="textColorEnable" format="color"/>
        <attr name="textColorDisable" format="color"/>
    </declare-styleable>


</resources>
