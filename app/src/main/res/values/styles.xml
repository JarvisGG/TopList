<resources>

    <!-- Base application theme. -->

    <style name="ZView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RecyclerViewItem">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">@color/GBK99</item>

    </style>

    <style name="ViewClick">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="RecyclerViewItemTitle">
        <item name="android:textColor">@color/GBK02</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RecyclerViewLabel">
        <item name="android:clickable">false</item>
    </style>

    <style name="RecyclerViewLabelTitle">
        <item name="android:textColor">@color/GBK02</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
