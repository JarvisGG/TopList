<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash"
    app:startDestination="@id/splash_host">

    <fragment
        android:id="@+id/splash_host"
        android:name="com.topList.android.ui.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/main_host"
            app:launchSingleTop="true"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true">

        </action>

    </fragment>

    <fragment
        android:id="@+id/main_host"
        android:label="Host"
        android:name="com.topList.android.ui.HostFragment"
        tools:layout="@layout/fragment_host" />

</navigation>